{
  "name": "dotfiles",
  "description": "utils for my dotties",
  "scripts": {
    "test": "npm-run-all --serial image:*",
    "image:build": "tsx tasks.ts build",
    "image:test": "tsx tasks.ts test",
    "check:format": "stylua --check .config/nvim/lua",
    "format": "stylua .config/nvim/lua",
    "lint": "luacheck .config/nvim"
  },
  "type": "module",
  "author": "Hacksore",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@johnnymorganz/stylua-bin": "^2.3.0",
    "@types/node": "20",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "commander": "^13.0.0"
  }
}
