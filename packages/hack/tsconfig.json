{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "bin/*.ts"]
}
