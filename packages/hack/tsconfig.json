{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "lib": [
      "esnext"
    ],
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "bin/*.ts"
  ]
}
